{
    "name": "dokobit/gateway-php-sdk",
    "description": "Client for Dokobit Gateway API",

    "type": "library",
    "license": "MIT",
    "homepage": "https://www.dokobit.com",

    "require": {
        "php"                       : ">=7.0.0",
        "guzzlehttp/guzzle"         : "^6.3.3",
        "symfony/validator"         : "~3.2|~4.0"
    },
    "require-dev": {
        "psr/log"           : "~1.0",
        "monolog/monolog"   : "~1.0",
        "phpunit/phpunit"   : "~5.7"
    },
    "autoload": {
        "psr-4": {
            "Isign\\Gateway\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Isign\\Gateway\\Tests\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
